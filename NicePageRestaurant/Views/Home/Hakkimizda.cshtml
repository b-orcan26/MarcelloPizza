@model Entities.Concrete.Hakkimizda
@{
    ViewData["Title"] = "Hakkimizda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .customSize{
        width:370px;
        height:370px;
    }

    .h4Style {
        font-family: "Graviolasoft",sans-serif;
        font-weight: 500;
        line-height: 1.25em;
        margin-top: 0.5em;
        margin-bottom: 0.8em;
    }
    .lucida{
        font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-12 col-md-6 d-flex align-items-center mt-4">
            <div>
                <div class="text-center">
                    <img src="~/img/pizzadilimi.jpg" class="mx-auto" />
                </div>


                <h3 style="color:#2b2b2b;" class="h4Style text-center mb-5"><b>@Model.Baslik</b></h3>
                <p class="text-center px-3" style="color:#f1c50e !important; font-style:italic; font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif">
                   @Model.Aciklama1

                </p>
                <p class="text-center" style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif">
                    @Model.Aciklama2
                </p>

            </div>

        </div>
        <div class="d-none d-md-block col-md-6 buyukPizzadiv mt-4">
            <img src="~/img/hakkimizdapizza.jpg" class="img-fluid img-rounded" style="border-radius: 2% !important;" />
        </div>
    </div>

    <div style="padding-top:150px; padding-bottom:50px;">
        <h3 class="text-center" style="color:#2b2b2b;"><b>Şeflerimizle Tanışın</b></h3>
    </div>

    <div class="card-deck">
        <div class="card border-0">
            <img class="customSize card-img-top" src="http://pizzahouse.themerex.net/wp-content/uploads/2016/08/team-3-370x370.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="lucida card-title text-center">Sofi Accorsi</h5>
                <p class="lucida card-text text-center">Exclusive Chef</p>
            </div>
        </div>


        <div class="card border-0">
            <img class="customSize card-img-top" src="http://pizzahouse.themerex.net/wp-content/uploads/2016/08/team-2-370x370.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="lucida card-title text-center">Marco Masini</h5>
                <p class="lucida card-text text-center">Sous Chef</p>
            </div>

        </div>

        <div class="card border-0">
            <img class="customSize card-img-top" src="http://pizzahouse.themerex.net/wp-content/uploads/2016/08/team-1-370x370.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="lucida card-title text-center">Antonio Amedo</h5>
                <p class="lucida card-text text-center">Master Chef</p>
            </div>
        </div>
    </div>
    
</div>
